{
    "extends": "@tsconfig/esm",
    "ts-node": {
        "swc": true,
        "transpileOnly": true,
        "files": true,
        "experimentalReplAwait": true,
        "esm": true
    },
    "compilerOptions": {
        "sourceMap": true,
        "rootDir": ".",
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "diagnostics": true
    }
}
